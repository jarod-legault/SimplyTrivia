{
  "expo": {
    "name": "SimplyTrivia",
    "slug": "SimplyTrivia",
    "version": "1.0.0",
    "scheme": "simply-trivia",
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-web-browser",
      "expo-font",
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#00159C"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.simplytrivia"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#00159C"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.simplytrivia"
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "c6beba07-bf63-446c-9869-ef7a2abde5ee"
      }
    }
  }
}
