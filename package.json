{
  "name": "simplytrivia",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "android": "expo run:android",
    "dev:android": "eas build --platform android --profile development --local",
    "ios": "expo run:ios",
    "dev:ios": "eas build --platform ios --profile development --local",
    "dev:ios:device": "expo run:ios --device",
    "dev:server": "tsx server.ts",
    "prebuild": "expo prebuild",
    "prebuild:clean": "expo prebuild --clean",
    "start": "expo start",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\" && prettier -c \"**/*.{js,jsx,ts,tsx,json}\"",
    "format": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix && prettier \"**/*.{js,jsx,ts,tsx,json}\" --write",
    "format:file": "eslint --fix && prettier --write",
    "web": "expo start --web",
    "web:build": "expo export -p web",
    "web:serve": "npx serve dist",
    "init:json": "node --loader ts-node/esm utils/init-json-files.ts",
    "test:json": "tsx utils/test-json-validation.ts"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.0",
    "@react-native-async-storage/async-storage": "^2.1.2",
    "@react-navigation/native": "^6.1.7",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^11.9.1",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.42.0",
    "expo": "^51.0.0",
    "expo-asset": "~10.0.10",
    "expo-constants": "~16.0.1",
    "expo-dev-client": "~4.0.26",
    "expo-linking": "~6.3.1",
    "expo-router": "~3.5.14",
    "expo-sqlite": "~14.0.6",
    "expo-status-bar": "~1.12.1",
    "expo-system-ui": "~3.0.4",
    "expo-web-browser": "~13.0.3",
    "express": "^5.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.1",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "4.10.1",
    "react-native-screens": "3.31.1",
    "react-native-web": "~0.19.10",
    "uuid": "^11.1.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/react": "~18.2.45",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "babel-plugin-inline-import": "^3.0.0",
    "drizzle-kit": "^0.30.6",
    "eslint": "^8.57.0",
    "eslint-config-universe": "^12.0.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.2.5",
    "tsx": "^4.19.3",
    "typescript": "~5.3.3"
  },
  "eslintConfig": {
    "extends": "universe/native",
    "root": true
  },
  "expo": {
    "install": {
      "exclude": [
        "react-native-safe-area-context"
      ]
    }
  },
  "private": true
}
