{
  "name": "simplytrivia",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "android": "expo run:android",
    "android:emulator:list": "emulator -list-avds",
    "android:emulator": "emulator -avd Pixel_8_Android_10",
    "android:build:dev": "yarn && eas build --platform android --profile development --local",
    "android:build:release": "yarn && eas build --platform android --profile release --local",
    "android:build:publish": "yarn && eas build --platform android --profile production --local",
    "ios": "expo run:ios",
    "ios:build:publish": "yarn && eas build --platform ios --profile production --local",
    "ios:simulator:list": "xcrun simctl list devices",
    "ios:simulator": "xcrun simctl boot ACF62586-7093-4516-ABCA-D1D32C9E5AB6 && open -a Simulator",
    "dev:ios:eas": "eas build --platform ios --profile development --local",
    "dev:ios:device": "expo run:ios --device",
    "prebuild": "expo prebuild",
    "prebuild:clean": "expo prebuild --clean",
    "start": "expo start",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\" && prettier -c \"**/*.{js,jsx,ts,tsx,json}\"",
    "format": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix && prettier \"**/*.{js,jsx,ts,tsx,json}\" --write",
    "web": "expo start --web"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-navigation/native": "^7.0.14",
    "axios": "^1.7.7",
    "expo": "^53.0.0",
    "expo-constants": "~17.1.7",
    "expo-dev-client": "~5.2.4",
    "expo-font": "~13.3.2",
    "expo-linking": "~7.1.7",
    "expo-router": "~5.1.6",
    "expo-sqlite": "~15.2.14",
    "expo-status-bar": "~2.2.3",
    "expo-system-ui": "~5.0.11",
    "expo-web-browser": "~14.2.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "~5.6.1",
    "react-native-screens": "~4.11.1",
    "react-native-web": "^0.20.0",
    "zustand": "^5.0.0-rc.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@react-native-community/cli": "^20.0.2",
    "@types/react": "~19.0.10",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "eslint-config-universe": "^12.0.1",
    "prettier": "^3.2.5",
    "typescript": "~5.8.3"
  },
  "eslintConfig": {
    "extends": "universe/native",
    "root": true
  },
  "expo": {
    "install": {
      "exclude": [
        "react-native-safe-area-context"
      ]
    }
  },
  "private": true
}
